<!DOCTYPE html>
<html>
  <head>
    <title>添加书籍</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/addbook.css' />
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.css">
    <script src="/jquery-1.12.4.min.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>
    <script src="/layer/layer.js"></script>
    
  </head>
  <style>

  
  
  </style>
  
     
  <body>


    <%- include("haf")%>

              <div id="content" class="container">

                <div class="left">
                    <img src="../images/back1.jpg" alt="">

                </div>
                <div class="right">
                      <div class="form">
                                <div class="form-group">
                                  <label for="recipient-name" class="control-label">图书编号:</label>
                                  <input type="text" class="form-control bookid" id="recipient-name" name="bookid">
                                </div>
                                <div class="form-group">
                                  <label for="message-text" class="control-label">书名:</label>
                                  <input type="text" class="form-control title" id="recipient-name" name="title">
                                </div>
                                <div class="form-group">
                                      <label for="recipient-name" class="control-label">作者:</label>
                                      <input type="text" class="form-control author" id="recipient-name" name="author">
                               </div>
                               <div class="form-group">
                                      <label for="recipient-name" class="control-label">价格:</label>
                                      <input type="text" class="form-control price" id="recipient-name" name="price">
                               </div>
                               <div class="form-group">
                                      <label for="recipient-name" class="control-label">简介:</label>

                                      <!-- <div class="summary"></div> -->
                                      <textarea name="" class="form-control summary" name="summary"></textarea>
                                      <!-- <input type="text" class="form-control summary" id="recipient-name" > -->
                               </div>
                               <div class="form-group">
                                    <label for="recipient-name" class="control-label"></label>
                                    <button class="form-control btn btn-primary" id="recipient-name" >提交</button>
                             </div>
                              </div>
                </div>

                    
       
              </div>

        </body>
</html>
<script>
 $("button").click(function(){
     var bookid=$(".bookid").val();
     var title=$(".title").val();
     var author=$(".author").val();
     var price=$(".price").val();
     var summary=$(".summary").val();


     $.ajax({
         url:"/superuser/addbooksubmit",
         data:{
             bookid:bookid,
             title:title,
             author:author,
             price:price,
             summary:summary
         },
         type:"get",
         success:function(data){

             console.log(data)
             if(data=="1"){
                layer.msg("添加成功",{icon:1})
             }else{
                layer.msg("图书编号或是书名已存在",{icon:2})
             }
            
             setTimeout(function(){
                 location.href="/superuser/addbook"
             },2000)

         }
     })
 })
   


</script>



